<section class="responsive-table">
<table>
    <thead>
        <tr>
            <th>Item</th>
            <th>Food</th>
            <th>Quantity</th>
            <th>Unit</th>
            <th>Value</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% ingredients.each_with_index do |i, no|%>
        <tr>
            <td>
                <%= no + 1 %>
            </td>
            <td>
                <%= i.food.name %>
            </td>
            <td>
                <%= i.quantity %>
            </td>
            <td>
                 <%= i.food.measurement_unit %>
            </td>
            <td>
                $ <%= i.quantity * i.food.price %>
            </td>
            <td class="td-actions"> 
                <%# <button type="button" class="table-action-btn" >Modify</button> %>
                <% if current_user == i.recipe.user %>
                    <%= form_with model: [i.recipe, i], method: :delete do |f| %>
                        <%= f.submit "Remove", class: "table-action-btn" %>
                    <% end %>
                <% else %>
                    No permission!
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</section>