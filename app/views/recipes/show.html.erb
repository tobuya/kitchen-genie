<h1><%= @recipe.name %></h1>

<div>
  <strong>Preparation Time:</strong> <%= @recipe.preparation_time %> minutes
</div>

<div>
  <strong>Cooking Time:</strong> <%= @recipe.cooking_time %> minutes
</div>

<div>
  <strong>Description:</strong> <%= @recipe.description %>
</div>

<div>
  <strong>Public:</strong> <%= @recipe.public? ? "Yes" : "No" %>
</div>

<%= link_to "Add Food", new_food_path, class: "cta-btn" %>
<%= button_to "Delete Recipe", recipe_path(@recipe), method: :delete, data: { confirm: "Are you sure you want to delete this recipe?" }, class: "btn btn-danger" %>


<div>
  <strong>Foods:</strong>
  <% if @recipe.foods.any? %>
    <ul>
      <% @recipe.foods.each do |food| %>
        <li><%= food.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No foods added yet.</p>
  <% end %>
</div>

