<section class="page-container">
    <% if @recipes.empty? %>
        <%= render 'empty_recipes' %>
    <% else %>
        <h2 class="page-title">All <%= pluralize(@recipes.length, 'Recipe') %> by üë®‚Äçüç≥ <%= current_user.name %></h2>
    <% end %>
    <div class="recipes-list">
    <% @recipes.each do |recipe| %>
        <article class="recipe-card">
            <header>
                <h3><%= link_to recipe.name, recipe_path(recipe), class: "recipe-card-title" %></h3>
                <div class="recipe-meta">
                    <span> ‚è∞ Prep: <%= recipe.preparation_time %> Min</span>
                    <span> ‚è≤ Cook: <%= recipe.cooking_time %> Min</span>
                    <% if recipe.public %>
                        <span>üëÄ Public </span>
                    <% end %>
                </div>
                <div class="recipe-action">
                    <%= form_with model: [recipe], method: :delete do |f| %>
                        <%= f.submit "Remove", class: "warning-btn" %>
                    <% end %>
                </div>
            </header>
            <div class="recipe-body">
                <h3>Description</h3>
                <p><%= recipe.description %></p>
            </div>
        </article>
    <% end %>
    </div>
</section>


