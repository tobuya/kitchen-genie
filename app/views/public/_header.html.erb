<header class="main-header">
  <nav class="main-nav">
    <div class="brand-bar">
      <h1><%= link_to "Kitchen Genie", root_path, class: "brand" %></h1>
      <button id="toggle-nav-btn">
        <svg viewBox="0 0 24 24" width="24" height="24">
          <rect width="24" height="24" fill="none" />
          <path d="M1.5 12h21M1.5 6h21M1.5 18h21" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
        </svg>
      </button>
    </div>
    <ul class="nav-links">
      <li><%= link_to "Food List", foods_path, class: "link" %></li>
      <li><%= link_to "Recipe List", recipes_path, class: "link" %></li>
      <li><%= link_to "Public Recipes", public_recipes_path, class: "link" %></li>
      <li><%= link_to "Shopping List", shopping_list_path, class: "link" %></li>
    </ul>
     <% if user_signed_in? %>
        <div class="user-info">
          <div>
            <span class="user-icon"><%= current_user.name[0].upcase %></span>
            <span class="user-name"><%= current_user.name %></span>
          </div>
          <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "warning-btn" %>
        </div>
      <% else %>
        <div class="user-actions">
          <%= link_to 'Register', new_user_registration_path, class: "warning-btn" %>
          <%= link_to 'Log In', new_user_session_path, class: "warning-btn" %>
        </div>
      <% end %>
  </nav>
</header>
<% if notice %>
    <div class="alert alert-info"><%= notice %></div>
<% end %>
<% if alert %>
    <div class="alert alert-danger"><%= alert %></div>
<% end %>
<script>
  const toggleBtn = document.querySelector('#toggle-nav-btn');
  const navMenu = document.querySelector('.nav-links');

  toggleBtn.addEventListener("click", () => {
    navMenu.classList.toggle('show');
  });
</script>